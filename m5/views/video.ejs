<body>

        <%- include('_head' , {title: '這是傳過去的東西'}) %>
    <div class="jumbotron">
        <!-- https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/polina.jpg -->
        <video playsinline autoplay muted loop poster="https://firebasestorage.googleapis.com/v0/b/bkappdb.appspot.com/o/polina.jpg?alt=media&token=95ce826e-832c-44ae-8ab8-334540eefc2c" id="bgvid">
            <!-- <source src="http://thenewcode.com/assets/videos/polina.webm" type="video/webm"> -->
            <!-- <source src="http://thenewcode.com/assets/videos/polina.mp4" type="video/mp4"> -->
            <!-- <source src="http://vjs.zencdn.net/v/oceans.mp4" type="video/mp4"> -->
            <source id="source1" src="https://firebasestorage.googleapis.com/v0/b/bkappdb.appspot.com/o/polina.mp4?alt=media&token=fffbec6c-c99d-4b71-87bf-3568ac3cb886" type="video/mp4">
        </video>
    </div>

</body>

<script>
    $(function() {

        //$('#menuBar').slideUp(1000)

        //show full screen
        var myvideo = document.getElementById("bgvid");
        if (myvideo.requestFullscreen) {
            myvideo.requestFullscreen();
            //alert('requestFullscreen');
        } else if (myvideo.mozRequestFullScreen) {
            myvideo.mozRequestFullScreen();
            //alert('mozRequestFullScreen');
        } else if (myvideo.webkitRequestFullscreen) {
            myvideo.webkitRequestFullscreen();
            //alert('webkitRequestFullscreen');
        }

        var source = myvideo.getElementById("source1");
        //source.src = 'http://vjs.zencdn.net/v/oceans.mp4';

        source.setAttribute('src', 'http://vjs.zencdn.net/v/oceans.mp4');

        myvideo.appendChild(source);
        myvideo.play();

        //myvideo.load();

    })
</script>

<style>
    video {
        position: fixed;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: -100;
        -moz-transform: translateX(-50%) translateY(-50%);
        -ms-transform: translateX(-50%) translateY(-50%);
        -webkit-transform: translateX(-50%) translateY(-50%);
        transform: translateX(-50%) translateY(-50%);
        background: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/polina.jpg') no-repeat;
        background-size: cover;
        -webkit-transition: 1s opacity;
        transition: 1s opacity;
    }
    
    #menuBar {
        opacity: .5;
    }
    
    .jumbotron {
