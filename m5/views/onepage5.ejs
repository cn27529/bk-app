<%- contentFor('body')%>

    <div id="fullpage">

        <div class="section">

            <h1>
                <img src="./public/images/fb-logo.jpg" alt="logo" style="width: 200px; height: 200px; border-radius: 50%;">
            </h1>
            <h2>
                <span class="sites" style="margin:15px;">
                <a target="_blank" href="<%= ig %>">
                    <i class="fab fa-instagram"></i>
                </a>
            </span>

                <span class="sites" style="margin:15px;">
                <a target="_blank" href="<%= fb %>">
                    <i class="fab fab-sm fa-facebook"></i>
                </a>
            </span>
            </h2>

        </div>

        <div class="section" id="section1">

            <div class="slide" id="slide1" style="background-image: url(public/images/攤子-歸仁長老教會.jpg);">
                <h1>攤子-歸仁長老教會</h1>
            </div>

            <div class="slide" id="slide1" style="background-image: url(public/images/food-豬肉蛋鐵板麵.jpg);">
                <h1>豬肉蛋鐵板麵</h1>
            </div>

            <div class="slide" id="slide1" style="background-image: url(public/images/food-雞排.jpg);">
                <h1>雞排</h1>
            </div>
            <div class="slide" id="slide1" style="background-image: url(public/images/food-套餐.jpg);">
                <h1>套餐</h1>
            </div>


        </div>

        <div class="section" v-for="(item, index) in videos">
            <video class="myVideo" loop muted data-autoplay>
            <source :src="item.url" type="video/mp4" />
        </video>
            <div class="layer">

                <div>
                    <i class="fas fas-sm fa-clock"></i>&nbsp;&nbsp;&nbsp;&nbsp;
                    <span>{{ item.time }}</span>
                </div>
                <div>
                    <i class="fas fa-map-marker-alt"></i>
                    <span>&nbsp;&nbsp;{{ item.title }}</span>
                </div>

            </div>
        </div>

    </div>

    <%- contentFor('css')%>
        <style>
            /* Style for our header texts
                        * --------------------------------------- */
            
            .layer span {
                font-size: 40px;
            }
            
            a {
                text-decoration: none;
                color: antiquewhite;
            }
            
            .icon {
                margin-top: 30px;
            }
            
            .icon a {
                margin: 15px;
            }
            
            i {
                font-size: 3em;
            }
            
            h1 {
                font-size: 3em;
                font-family: arial, helvetica;
                color: #fff;
                margin: 0;
                padding: 0;
            }
            /* Centered texts in each section
                    Backgrounds will cover all the section
                        * --------------------------------------- */
            
            .section {
                text-align: center;
                background-size: cover;
                background-color: #314b88;
            }
            
            .slide {
                -moz-background-size: 100% 100%;
                -webkit-background-size: 100% 100%;
                -o-background-size: 100% 100%;
                background-size: 100% 100%;
                background-size: cover;
                background-repeat: no-repeat;
            }
            
            .slide h1 {
                transform: translateY(-50%);
                position: relative;
                font-size: 50px;
                top: -150px;
            }
            /* Defining each section background and styles
                        * --------------------------------------- */
            
            #section0 {
                background-image: url(public/bg1.png);
                position: relative;
            }
            
            #section0 h1 {
                text-align: center;
                position: absolute;
                color: #000000;
                top: -400px;
                left: 0px;
                right: 0px;
                margin: 0px auto;
                transition: all 1.1s ease-out;
                -webkit-transition: all 1.1s ease-out;
            }
            
            .fp-viewing-1 #section0 h1 {
                top: 28px;
            }
            
            #section3 {
                background-image: url(public/bg4.png);
                padding: 6% 0 0 0;
            }
            /*Adding background for the slides
                        * --------------------------------------- */
            
            #slide0 {
                padding: 6% 0 0 0;
            }
            
            #infoMenu li a {
                color: #fff;
            }
            
            .myVideo {
                position: absolute;
                right: 0;
                bottom: 0;
                top: 0;
                right: 0;
                width: 100%;
                height: 100%;
                background-color: #314b88;
                /* in case the video doesn't fit the whole page*/
                /*background-image:  our video; */
                background-position: center center;
                background-size: cover;
                object-fit: cover;
                /*cover video background */
                z-index: 3;
            }
            
            .section .layer {
                position: absolute;
                z-index: 4;
                width: 100%;
                left: 0;
                top: 15%;
                /*
            		* Preventing flicker on some browsers
            		* See http://stackoverflow.com/a/36671466/1081396  or issue #183
            		*/
                -webkit-transform: translate3d(0, 0, 0);
                -ms-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
                color: #ffffff;
            }
        </style>

